# Environment Configuration
# Copy this file to .env and update with your local settings
#
# TaxByte uses environment variables with the TAXBYTE_ prefix for configuration overrides
# Double underscores (__) are used to separate nested configuration keys

# Application Environment
# Options: development, staging, production
RUN_MODE=development

# Server Configuration
TAXBYTE_SERVER__HOST=127.0.0.1
TAXBYTE_SERVER__PORT=8080

# Database Configuration
# Full PostgreSQL connection URL
TAXBYTE_DATABASE__URL=postgres://postgres:postgres@localhost:5432/taxbyte
# Maximum number of database connections in the pool
TAXBYTE_DATABASE__MAX_CONNECTIONS=10
# Database connection timeout (seconds)
TAXBYTE_DATABASE__CONNECT_TIMEOUT_SECONDS=5
# Pool acquisition timeout (seconds) - increased to handle wkhtmltopdf nested requests
TAXBYTE_DATABASE__ACQUIRE_TIMEOUT_SECONDS=30

# Redis Configuration
# Full Redis connection URL
TAXBYTE_REDIS__URL=redis://localhost:6379
# Redis connection timeout (seconds)
TAXBYTE_REDIS__CONNECT_TIMEOUT_SECONDS=5

# Security Configuration
# Minimum password length requirement
TAXBYTE_SECURITY__PASSWORD_MIN_LENGTH=12
# Session TTL in seconds (default: 1 hour)
TAXBYTE_SECURITY__SESSION_TTL_SECONDS=3600
# "Remember me" session TTL in seconds (default: 30 days)
TAXBYTE_SECURITY__REMEMBER_ME_TTL_SECONDS=2592000
# Base64-encoded 32-byte encryption key for OAuth tokens
# Generate with: openssl rand -base64 32
TAXBYTE_SECURITY__ENCRYPTION_KEY_BASE64=your-base64-encryption-key-here

# Rate Limiting Configuration
# Maximum login attempts before rate limiting kicks in
TAXBYTE_RATE_LIMIT__LOGIN_MAX_ATTEMPTS=5
# Time window for login rate limiting in seconds (default: 5 minutes)
TAXBYTE_RATE_LIMIT__LOGIN_WINDOW_SECONDS=300

# Google OAuth 2.0 Configuration
# Get credentials from Google Cloud Console: https://console.cloud.google.com/
# Create OAuth 2.0 Client ID for Web application
TAXBYTE_GOOGLE_DRIVE__OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
TAXBYTE_GOOGLE_DRIVE__OAUTH_CLIENT_SECRET=your-client-secret
# OAuth redirect URL (must match Google Cloud Console settings)
TAXBYTE_GOOGLE_DRIVE__OAUTH_REDIRECT_URL=http://localhost:8080/oauth/google/callback
